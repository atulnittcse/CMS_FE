<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:id="@+id/tv_taskname"
        tools:text="All Circulating area (North, South)"
        android:padding="8dp"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:padding="1dp"
        android:paddingBottom="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_taskname">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_1"
            android:padding="4dp"
            android:text="Nil"
            android:visibility="visible"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_2"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_2"
            android:padding="4dp"
            android:text="Nil"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/tv_1"
            app:layout_constraintEnd_toStartOf="@id/tv_3"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_3"
            android:visibility="visible"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:padding="4dp"
            android:gravity="center"
            android:text="Nil"
            app:layout_constraintStart_toEndOf="@id/tv_2"
            app:layout_constraintEnd_toStartOf="@id/tv_4"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_4"
            android:padding="4dp"
            android:text="View"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tv_3"
            app:layout_constraintEnd_toStartOf="@id/tv_5"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_5"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:text="Nil"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/tv_4"
            app:layout_constraintEnd_toStartOf="@id/tv_6"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_6"
            android:padding="4dp"
            android:text="Nil"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@id/tv_5"
            app:layout_constraintEnd_toStartOf="@id/tv_7"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_7"
            android:padding="4dp"
            android:text="Nil"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tv_6"
            app:layout_constraintEnd_toStartOf="@id/tv_8"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_8"
            android:visibility="gone"
            android:padding="4dp"
            android:text="Nil"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/tv_7"
            app:layout_constraintEnd_toStartOf="@id/tv_9"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_9"
            android:padding="4dp"
            android:text="Nil"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tv_8"
            app:layout_constraintEnd_toStartOf="@id/tv_10"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_10"
            android:padding="4dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            android:text="Nil"
            app:layout_constraintStart_toEndOf="@id/tv_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>